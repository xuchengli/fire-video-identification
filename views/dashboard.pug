extends layout

block content
    .uk-container
        table.uk-table.uk-table-divider
            thead
                tr
                    th(style="width:55%;") API
                    th(style="width:35%;") Identification
                    th(style="width:10%;") Action
            tbody
            tfoot
                tr
                    td(colspan="3")
                        label.uk-margin-small-right Confidence
                        | > 
                        select#confidence.uk-select.uk-form-small.uk-margin-right(style="width:65px;")
                            - for (var n = 10; n < 100; n += 10)
                                if (n == 80)
                                    option(value=n/100 selected="selected") #{n}%
                                else
                                    option(value=n/100) #{n}%
                        label.uk-margin-small-right Extract screenshots every
                        select#frequence.uk-select.uk-form-small(style="width:60px;")
                            - for (var n = 1; n <= 60; n++)
                                option(value=n) #{n}s
                        #uploader.uk-align-right(uk-form-custom)
                            input(type="file")
                            button.uk-button.uk-button-primary.uk-button-small(type="button" tabindex="-1")
                                | Upload your video
        .uk-child-width-1-2.uk-grid-small.uk-margin-top(uk-grid)
            #progress
            #video
