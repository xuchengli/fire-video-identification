.uk-container.uk-margin-top
    .uk-child-width-expand.uk-grid-small(uk-grid)
        div
            video#player.video-js
                source(src=video type="video/x-flv")
        div
            .uk-child-width-1-3.uk-grid-small(uk-grid)
                each screenshot in screenshots
                    .uk-inline
                        img(src=screenshot.url)
                        .uk-overlay.uk-light.uk-position-bottom.uk-padding-small.uk-padding-remove-vertical
                            p= screenshot.timestamp
                else
                    p No Fire